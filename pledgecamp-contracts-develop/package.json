{
  "name": "@pledgecamp/pledgecamp-contracts",
  "version": "0.0.1",
  "description": "Pledgecamp Platform smart contracts",
  "author": "Sam Pullman",
  "main": "scripts/index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "lint": "node_modules/.bin/eslint ./test ./scripts ./src *.js",
    "lint:solidity": "npx hardhat check",
    "backup-contracts": "node scripts/backup-contracts.js",
    "deploy-contracts": "npx hardhat run --network localRPC scripts/deploy.js",
    "set-allowance": "npx hardhat run --network localRPC scripts/allowance.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pledgecamp/pledgecamp-contracts"
  },
  "dependencies": {
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@pledgecamp/blockchain-utils": "^0.1.1",
    "command-line-args": "^5.1.1",
    "dotenv": "^10.0.0",
    "fs-extra": "^10.0.0",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-deploy": "^0.8.9",
    "hardhat-gas-reporter": "^1.0.4",
    "lodash": "^4.17.21",
    "solc": "^0.8.3",
    "solidity-coverage": "^0.7.16"
  },
  "devDependencies": {
    "@ethersproject/hardware-wallets": "^5.4.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "eslint": "^7.30.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.4",
    "eth-gas-reporter": "^0.2.22",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.1",
    "hardhat": "^2.4.3"
  }
}
